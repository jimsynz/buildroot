# U-Boot bootloader (loaded by ABL from boot.img)
# Using Arduino's U-Boot fork with QRB2210/QCM2290 support
# Repository: https://github.com/arduino/u-boot
# Branch: qcom-mainline
BR2_TARGET_UBOOT=y
BR2_TARGET_UBOOT_BUILD_SYSTEM_KCONFIG=y
BR2_TARGET_UBOOT_CUSTOM_GIT=y
BR2_TARGET_UBOOT_CUSTOM_REPO_URL="https://github.com/arduino/u-boot.git"
BR2_TARGET_UBOOT_CUSTOM_REPO_VERSION="qcom-mainline"
BR2_TARGET_UBOOT_BOARD_DEFCONFIG="qcom"
BR2_TARGET_UBOOT_CONFIG_FRAGMENT_FILES="board/arduino/arduino-uno-q/uboot.config"
BR2_TARGET_UBOOT_NEEDS_DTC=y
BR2_TARGET_UBOOT_NEEDS_OPENSSL=y
BR2_TARGET_UBOOT_NEEDS_PYLIBFDT=y
BR2_TARGET_UBOOT_NEEDS_XXD=y
BR2_TARGET_UBOOT_FORMAT_CUSTOM=y
BR2_TARGET_UBOOT_FORMAT_CUSTOM_NAME="u-boot.bin"

# Firmware
BR2_PACKAGE_LINUX_FIRMWARE=y
BR2_PACKAGE_LINUX_FIRMWARE_QCOM_QCM2290=y

# Arduino Router application
BR2_PACKAGE_ARDUINO_ROUTER=y

# Host tools for packaging and flashing
BR2_PACKAGE_HOST_DOSFSTOOLS=y
